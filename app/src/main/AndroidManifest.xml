<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="com.example.myapplication">
    <uses-permission android:name="android.permission.INTERNET" />
    <application android:allowBackup="true" android:icon="@mipmap/penguin" android:label="My Language" android:roundIcon="@mipmap/penguin" android:supportsRtl="true"
                 tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity android:name=".MainActivity" android:configChanges="orientation" android:screenOrientation="portrait" android:theme="@style/mainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".PlayActivity" android:configChanges="orientation" android:screenOrientation="portrait" android:theme="@style/AppTheme"/>
        <activity android:name=".ImageActivity" android:configChanges="orientation" android:screenOrientation="portrait" android:theme="@style/imageTheme"/>
        <activity android:name=".HelpActivity" android:theme="@style/helpTheme"/>
        <activity android:name=".SoloActivity" android:configChanges="orientation" android:screenOrientation="portrait" android:theme="@style/soloTheme"/>
        <activity android:name=".RequestActivity" android:configChanges="orientation" android:screenOrientation="portrait" android:theme="@style/mainMenu"/>
    </application>


</manifest>